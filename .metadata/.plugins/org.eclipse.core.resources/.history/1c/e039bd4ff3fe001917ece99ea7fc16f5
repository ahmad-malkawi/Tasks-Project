package jo.secondstep.session2;

import java.util.Scanner;

public class Students {
	String name;
	int subjects_num;
	Subject[] subjects;
	Scanner reder;
	double avg;
	int marks_sum;

	public Students() {
		super();
		reder = new Scanner(System.in);
		marks_sum = 0;
		subjects_num = 0;
	}

	public String getName() {
		return name;
	}

	public void setName() {
		String student_name = reder.nextLine();
		this.name = student_name;
	}

	public int getSubjects_num() {
		return subjects_num;
	}

	public void setSubjects_num() {
		int subjects_num = reder.nextInt();
		this.subjects_num = subjects_num;
		this.subjects = new Subject[this.subjects_num];
	}

	public Subject[] getSubjects() {
		return subjects;
	}

	public void setSubjects_names() {
		for (int i = 0; i < this.subjects_num; i++) {
			String subject_name = reder.nextLine();
			this.subjects[i].setName(subject_name);
		}
	}

	public void setSubjects_marks() {
		for (int i = 0; i < this.subjects_num; i++) {
			int subject_mark = reder.nextInt();
			if (subject_mark >= 0 && subject_mark <= 100) {
				this.subjects[i].setMark(subject_mark);
				marks_sum += subject_mark;
			} else {
				System.out.println("it is invalid mark the mark should between 0 to 100 please");
				i--;
			}
		}
	}

	public double calculatAvg() {
		return marks_sum / subjects_num;
	}

	public void printStuedentInfo() {
		System.out.println("student name is: " + this.name);
		System.out.println("the number of subject(s) is: " + this.subjects_num);
		for (int i = 0; i < this.subjects_num; i++) {
			System.out.println(
					"the student mark in \"" + this.subjects[i].getName() + "\" is: " + this.subjects[i].getMark());
		}
		System.out.println("the student average is " + calculatAvg());
	}
}
